<main id="main" class="site-main" role="main">
	<div class="container-fluid">

		<section class="row">
			<div class="col-sm-12 market-header">
				<div>
					<img class="frankHeader" src="{{networkData.templatePath}}/static/images/frank-logo.svg" width="216" height="60">
					<p>TRUSTED SOURCES. GLOBAL STORIES.</p>
				</div>

				<img src="{{networkData.templatePath}}/static/images/ubt-logo.png" width="151" height="54">

			</div>
		</section>
	</div>

	<section class="market-hero">
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-12">
					<div class="content">
						<h1>News that matters&nbsp;to&nbsp;you</h1>
						<p>Coming soon</p>
						<a id="register" href="#" class="_btn j-register">REGISTER YOUR INTEREST</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<div class="container-fluid">

		<section class="row">
			<div class="col-sm-12 section-title">
				<h1>A unique news experience</h1>
			</div>
			<div class="col-sm-4 three-card">
				<img src="{{networkData.templatePath}}/static/images/market-curated.svg">
				<h2>CURATED</h2>
				<p>We understand what really matters, without the fluff. Informative news that's safe for all the family to read.   </p>
			</div>
			<div class="col-sm-4 three-card">
				<img src="{{networkData.templatePath}}/static/images/market-professional.svg">
				<h2>PROFESSIONAL</h2>
				<p>Curated exclusively for UBT by AAP's dedicated newsroom of professionals to the highest editorial standards</p>
			</div>
			<div class="col-sm-4 three-card">
				<img src="{{networkData.templatePath}}/static/images/market-world.svg">
				<h2>ALL THE WORLD'S NEWS</h2>
				<p>Stay well-informed with our premium network of news and video from Australia, New Zealand and every corner of the globe, with specific focus on community locations.</p>
		</section>
	</div>



	<section class="row essential-news">
		<div class="container-fluid">
			<div class="col-sm-12 section-title">
				<h1>Essential news delivered daily</h1>
				<p>Quality journalism, the way you want it. Enjoy unlimited access to stories that matter.</p>
			</div>
			<div class="col-sm-12 col-md-5 col-md-offset-1 centerContent">
				<img class="screenImage" src="{{networkData.templatePath}}/static/images/market-screens.png?v=3"></img>
			</div>
			<div class="col-sm-12 col-md-offset-1 col-md-5">
				<h3>What's included in your subscription</h3>
				<ul>
					<li>Unlimited access to the Frank website on desktop, mobile and tablet</li>
					<li>Frank Analysis, an exclusive printable newsletter of the day's best news</li>
					<li>Access to weekly crosswords and quizzes created for the UBT community</li>
					<li>Post and view real estate and job listings from the UBT community</li>
					<li>Digital screens available for business pack subscribers*</li>
				</ul>
				<p class="disclaimer">*Additional hardware may be required for digital screens</p>
			</div>
		</div>
	</section>


	<div class="container-fluid">
		<section class="row cost">
			<div class="col-sm-12">
				<a href="#" class="_btn _btn--red _btn__register j-register">REGISTER YOUR INTEREST</a>
				<p>Billed monthly</p>
			</div>
		</section>




		<section class="row subscription">
			<div class="container-fluid">
				<div class="col-sm-12 section-title">
					<h1>Trusted sources. Global stories</h1>
					<p>Choose the subscription that's right for you</p>
				</div>


			    {% for plan in plans %}

					<div class="col-sm-3 subscriptionCard">
						<a href="{{networkData.defaultBlogUrl}}/@subscribe?plan={{plan.guid}}">
							<div class="card">
								<h3>{{plan.name}}</h3>
								<p class="usercount">{{plan.user_count}} Users</p>
								<p class="price">${{plan.plan_value/100|number_format(2, '.', ',')}}({{plan.currency|raw}})/{{plan.period}}</p>
								<p class="subnow">SUBSCRIBE NOW</p>
							</div>
						</a>
					</div>
					
			    {% endfor %}

