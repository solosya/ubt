{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set blogData    = _Blog.getBlog() %}




{{this.registerJs("CardController();")}}

{% set limit = 10 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}

{% set events = _Event.getEvents() %}


<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? true : true %}



    <main id="main" class="container-fluid site-main" role="main">
        





        <section class="row section">

            <div class="col-sm-offset-1 col-sm-10 section-header">
                <h2>{{this.title}}</h2>
                <p>{{sections['australia'].description}}</p>

                <p class="description">
                    {{blogData.shortDescription}}
                </p>
            </div>

            <div class="col-sm-offset-1 col-sm-10 section-sub-header">
                <h2><span>Horizons</span> – Reports from the regions</h2>
            </div>

            <div class="col-sm-offset-1 col-sm-3">
                {% for i in 0..2 if articles[articleCount] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 75, height: 64},
                        containerClass: 'card-article-suggested'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endfor %}
            </div>

            <div class="col-sm-3">
                {% for i in 0..2 if articles[articleCount] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 75, height: 64},
                        containerClass: "card-article-suggested"
                    }) | raw}}

                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endfor %}
            </div>


            <div class="col-sm-offset-1 col-sm-3">
                {% if articles[articleCount] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 300, height: 180},
                        containerClass: 'card-sm card-sm-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
            </div>

        </section>













        <section class="row section">

            <div class="col-sm-offset-1 col-sm-6 section-header campus">
                <img src="{{networkData.templatePath}}/static/images/campus-trading-logo.jpg">
                <p class="campus-description">Fusce vehicula dolor arcu, sit amet blandit dolor…</p>
            </div>


            <div class="col-sm-offset-1 col-sm-6">
                {% if articles[articleCount] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 640, height: 420},
                        containerClass: 'card-main-2col card-main-2col-tablet card-main-2col-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}
            </div>

            <div class="col-sm-offset-1 col-sm-3 eventlist">
                <h2>EVENTS</h2>

                {% for i in 0..6 if events[0] %}
                    {{this.render('partials/_single-event.twig', {
                        event: events[0], 
                        imageSize: {width: 60, height: 37},
                        containerClass: "card-event card-event-tablet"
                    }) | raw}}
                {% endfor %}
            </div>



        </section>














        <section class="row section">

            <div class="col-sm-offset-1 col-sm-10 sevent-cols section-header">
            
                <div class="row">
                    <div class="col-sm-3">
                        {% if articles[articleCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: (articleCount+1),
                                imageSize: {width: 454, height: 245},
                                containerClass: 'card-ubt'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        {% endif %}
                    </div>

                    <div class="col-sm-2">
                        {% for i in 0..1 if articles[articleCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                imageSuppress: true,
                                containerClass: "card-blogger"
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        {% endfor %}
                    </div>


                    <div class="col-sm-2">
                        {% for i in 0..1 if articles[articleCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                imageSuppress: true,
                                containerClass: "card-blogger"
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        {% endfor %}
                    </div>
                </div>
            </div>

        </section>



        <section class="row section">

            <div class="col-sm-offset-1 col-sm-11 section-header">
                <h2>Listings</h2>
            </div>
