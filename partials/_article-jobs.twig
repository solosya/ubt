{% import "quotes.twig" as quotes %}

<div class="content">
    <div class="cat-time">
        <time datetime="{{params.publishDate}}">{{params.publishDate}}</time>
    </div>

    <h2>{{ params.articleTitle }}</h2>
    <p class="company">{{ article.additionalInfo.company }}</p>
    
    {% if article.additionalInfo.salaryrange %}
        <p class="salary">Salary ${{ article.additionalInfo.salaryrange }}</p>
    {% endif %}

    <p class="excerpt">{{ quotes.smarten(article.excerpt | raw) }}</p>
    <p class="location">{{ article.additionalInfo.location }}</p>
                        
    <div class="author">
        <img src="{{params.profileImg}}" class="img-circle">
        <p>{{ article.createdBy['displayName'] }}</p>
    </div>
    <time class="lowerTime" datetime="{{params.publishDate}}">{{params.publishDate}}</time>
</div>