{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set blogData    = _Blog.getBlog() %}




{{this.registerJs("CardController();")}}

{% set limit = 12 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}

{% set events = _Event.getEvents() %}


<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? true : false %}



    <main id="main" class="container-fluid channel-main" role="main">
        



        <section class="row">
            <div class="col-sm-offset-1 col-sm-10 section-header">
                <h2>{{blogData.title}}</h2>
                <p class="description">
                    {{blogData.shortDescription}}
                </p>
            </div>
        </section>
        

        
        <section class="row">

            <div class="col-sm-offset-1 col-sm-6">
                {% if articles[articleCount] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 640, height: 309},
                        containerClass: 'card-main-2col card-main-2col-tablet card-main-2col-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}


                {% for i in 0..4 if articles[articleCount] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 200, height: 140},
                        containerClass: 'card-rec card-rec-tablet card-rec-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endfor %}


z
                {{ this.render('partials/ajaxarticles.twig', {
                    limit: limit, 
                    non_pinned: articlesArr.existingNonPinnedCount, 
                    articles: articles,
                    card_style: "col-sm-12 card-rec card-rec-tablet card-rec-mobile",
                    container:"mainAjaxArticles"
                }) | raw }}




            </div>




            <div class="col-sm-offset-1 col-sm-3">

                <div class="advert visible-md-block visible-lg-block">
                    <div id='boxad' style='height:250px; width:300px;'>
                        <script>
                            document.currentScript.parentNode.id = boxadID;
                            googletag.cmd.push(function() { googletag.display(boxadID); });
                        </script>
                    </div>
                </div>





                {% for i in 0..2 if articles[articleCount] %}
                    {% set classes = ["card-sm card-sm-tablet card-rec-mobile", "card-sm-full card-sm-full-tablet", "card-sm card-rec-tablet card-sm-mobile"] %}
                    {% set images = [false, false, true] %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSuppress: images[i],
                        imageSize: {width: 300, height: 185},
                        containerClass: classes[i]
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endfor %}
            </div>

        </section>    






        <section class="row advert-banner-small hidden-xs hidden-sm hidden-md">
            <div class="advert banner">
                <div id='widebannerID' style='width:970px;margin: 0 auto;'>
                    <script>
                        document.currentScript.parentNode.id = widebannerID;
                        googletag.cmd.push(function() { googletag.display(widebannerID); });
                    </script>
                </div>
            </div>
        </section>
        <section class="row advert-banner-small hidden-xs hidden-lg">
            <div class="advert banner">
                <div id='smallbannerID' style='width:728px;margin: 0 auto;'>
                    <script>
                        document.currentScript.parentNode.id = smallbannerID;
                        googletag.cmd.push(function() { googletag.display(smallbannerID); });
                    </script>
                </div>
            </div>
        </section>
        <section class="row advert-banner-small hidden-sm hidden-md hidden-lg">
            <div class="advert banner">
               <div id='tinybannerAd' style='height:75px; width:300px;margin: 0 auto;'>
                        <script>
                            document.currentScript.parentNode.id = tinybannerID;
                            googletag.cmd.push(function() { googletag.display(tinybannerID); });
                        </script>
                    </div>
            </div>
        </section>








        <section class="row padded-row">
            <div class="col-sm-offset-1 col-sm-3">

            {% for i in 0..2 if articles[articleCount] %}
                {% if i != 0 %}
                    <div class="col-sm-3">
                {% endif %}
                    {{this.render('partials/_single-article.twig', {
                        article: articles[articleCount], 
                        position: (articleCount+1),
                        imageSize: {width: 300, height: 180},
                        containerClass: "card-sm-full card-sm-full-tablet"
                    }) | raw}}
                </div>
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
            {% endfor %}
        </section>






    </main><!-- .site-main -->