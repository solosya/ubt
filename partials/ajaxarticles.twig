<div class="ajaxArticles clearfix">
     <section class="col-sm-12">
        <div class="row">
            <div id="{{container}}" 
                 class="clearfix"
                 data-offset="{{offset}}"
                 data-limit="{{limit}}"
                 data-blogid="{{blogid}}"
                 data-containerclass="{{card_style}}"
                 data-loadtype="{{loadtype}}"
                 data-cardTemplate="{{articleTemplate}}"
                 data-imageSuppress="{{imageSupress}}"
                 data-existing-nonpinned-count="{{non_pinned}}">
             </div>
            <a class="loadMoreArticles {{buttonClass}}" 
                data-container="{{container}}"
                href="#">Show more</a>
        </div>

        {% set noDataCls = 'hide' %}
        {% if articles|length == 0 %}
            {% set noDataCls = '' %}
         {% endif %}
        <div class="row text-center has-margin-bottom-20 has-margin-top-20 {{noDataCls}} NoArticlesMsg">
            <p class="no-data text-center">No articles found.</p>  
        </div>
    </section>
</div>
