{% set aus = [] %}
{% set usd = [] %}
{% set gbp = [] %}

{# separate plans by currency #}
{% for plan in plans %}
	{% if plan.currency | lower == 'usd' %}
		{% set usd = usd|merge([plan]) %}
	{% endif %}
	{% if plan.currency | lower == 'aud' %}
		{% set aus = aus|merge([plan]) %}
	{% endif %}
	{% if plan.currency | lower == 'gbp' %}
