    <main id="main" class="container-fluid site-main" role="main">
        



        <section class="row section">

            <div class="col-sm-offset-1 col-sm-10 section-header">
                <h2 class="section-header__title">{{this.title}}</h2>
            </div>
            <div class="col-sm-offset-1 col-sm-7 subsection-header" >
                <p class="section-header__description">
                    {{blogData.shortDescription}}
                </p>
            </div>
            <div class="col-sm-3" >
                <a class="listing-link" href="{{networkData.defaultBlogUrl}}/@event-form">Submit an event</a>
            </div>
            
        </section>


        <section class="row">

            <div class="col-sm-offset-1 col-sm-6">


                <div id="job-listings">
                    {% for i in 0..7 if articles[articleCount] %}
                        {{this.render('partials/_single-event.twig', {
                            event: articles[articleCount], 
                            position: (articleCount+1),
                            imageSize: {width: 173, height: 144},
                            containerClass: 'card-rec card-rec-tablet card-rec-mobile'
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% endfor %}
                </div>

                {% if articles | length > 0 %}
                    {{ this.render('partials/ajaxarticles.twig', {
                        limit: limit, 
                        non_pinned: articlesArr.existingNonPinnedCount, 
                        articles: articles,
                        rendertype: "write",
                        card_style: "col-sm-12 card-rec-jobs card-rec-jobs-tablet card-rec-jobs-mobile",
                        container:"mainAjaxArticles"
                    }) | raw }}
                {% endif %}

            </div>




            <div class="col-sm-offset-1 col-sm-3">
                <div class="advert">
                       <div id='hPageAd1'></div>
                        <script>loadNextAd(invSpace,'hPageAd1','halfAd',hPageSize,hPageMap);</script>
                </div>
            </div>
        </section>




    </main><!-- .site-main -->