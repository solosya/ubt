{% set blogName      = blogData.title %}
	
{% set aus = [] %}
{% set usd = [] %}
{% set gbp = [] %}

{# separate plans by currency #}
{% for plan in plans %}
	{% if plan.currency | lower == 'usd' and 'School' in plan.plan_name %}
		{% set usd = usd|merge([plan]) %}
	{% endif %}
	{% if plan.currency | lower == 'aud' and 'School' in plan.plan_name %}
		{% set aus = aus|merge([plan]) %}
	{% endif %}
	{% if plan.currency | lower == 'gbp' and 'School' in plan.plan_name %}
		{% set gbp = gbp|merge([plan]) %}
	{% endif %}
	{% if plan.currency | lower == 'eur' and 'School' not in plan.plan_name %}
		{% set eur = eur|merge([plan]) %}
	{% endif %}
{% endfor %}


