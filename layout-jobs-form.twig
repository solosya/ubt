{{ set(this, 'title', _Blog.getBlogTitle()) }}

{% set jobsBlogId = 114 %}


{{this.registerJs("window.Acme.cards = CardController();")}}
{{this.registerJs("Acme.jobForm = new Acme.JobForm(["~jobsBlogId~"], 'Job Page');")}}
{{this.registerJs("Acme.listingView.init("~jobsBlogId~");")}}



{# {% set networkData = _Network.getNetworkData() %} #}
{% set blogData = _Blog.getBlog() %}
{% set limit = 10 %}

{% set user = false %}

{% if not _User.isGuest %} 
    {% set user = _User.getUser() %}
    {% set userString = "window.Acme.currentUser = '" ~ user.guid ~ "';" %}
    {{this.registerJs( userString )}}
{% endif %} 

{% set userArticlesArr = [] %}
{% if user %}                                                         {# 114 is jobs listings blog id #}
    {% set userArticlesArr = _User.getUserArticles(user.guid, 0, limit, {'blogs':[jobsBlogId], 'status': 'all'}) %}
{% endif %}


{# {% set events = _Event.getEvents() %} #}


<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? true : false %}



    <main id="main" class="container-fluid site-main listingForm" role="main">
        
        <section class="row section">
            <div class="col-md-7 section-header">
                <h2>{{blogData.title}}</h2>
                <p class="description">
                    {{blogData.shortDescription}}
                </p>
            </div>
            <div class="col-sm-offset-1 col-md-4 section-header">
                <h2 id="userlistingsrefresh">Your listings</h2>
            </div>
        </section>


        <section class="row">

            <div class="col-md-7">

                <div id="formerror" class="error-message">All fields have not been filled. Please review and <b>submit</b>.</div>

                <form class="" method="post" action="#" id="listingForm" data-type="jobs">
                    <div class="row">
                        <div class="col-sm-9">
                            <div id="regionSelect" class="propertyListingSelect"></div>
                            <input type="text" class="articleExtendedData" name="extendedData.company" id="company" value="" placeholder="Company name">
                            <input type="text" class="articleExtendedData" name="extendedData.website" id="website" value="" placeholder="Website">
                        </div>
                        <div class="col-sm-3">
                            <div data-imgcls="images" data-id="imageArray" class="uploadFileBtn jobs">Upload logo <br />(optional)</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <input type="text" class="" name="title" id="title" value="" placeholder="Job title">
                            <input type="text" class="articleExtendedData" name="extendedData.location" id="location" value="" placeholder="Job location (suburb or postcode)">
                            
                            <p class="form-section-label">Salary (optional)</p>

                            <fieldset>
                                <div class="inline">
                                    <input type="radio" name="extendedData.salary" id="salary1" class="articleExtendedData" value="1" checked="checked" />
                                    <label for="salary1">Annual salary package</label>
                                </div>
                                <div class="inline">
                                    <input type="radio" name="extendedData.salary" id="salary2" class="articleExtendedData" value="2" />
                                    <label for="salary2">Annual &amp; Commission</label>
                                </div>
                                <div class="inline">
                                    <input type="radio" name="extendedData.salary" id="salary3" class="articleExtendedData" value="3" />
                                    <label for="salary3">Commission only</label>
                                </div>
                                <div class="inline">
                                    <input type="radio" name="extendedData.salary" id="salary4" class="articleExtendedData" value="4" />
                                    <label for="salary4">Hourly rate</label>
                                </div>

                            </fieldset>
                            <input type="text" class="articleExtendedData" name="extendedData.salaryrange" id="salaryrange" value="" placeholder="Salary range">
                            
                            <textarea name="content" class="job-description" id="content"  placeholder="Description"></textarea>
                            <div id="imageArray" data-media="" class="imagearray"></div>

                            <button class="_btn" type="submit" id="listingFormSubmit">SUBMIT</button>
                            <button class="_btn" type="reset"  id="listingFormClear">CLEAR</button>
                        </div>
                    </div>
                </form>


            </div>
            <div  id="userListings" class="col-sm-offset-1 col-md-4">
                
                {% for article in userArticlesArr %}

                    {{this.render('partials/_single-article.twig', {
                        article: article, 
                        position: loop.index,
                        behaviour: 'noclick',
                        imageSize: {width: 150, height: 120},
                        template: 'listing',
                        containerClass: "card-form-listing listingCard"
                    }) | raw}}

                {% endfor %}
            </div>


        </section>

    </main><!-- .site-main -->