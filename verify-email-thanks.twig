{{ set(this, 'title', "Verify Email Address") }}
<div class="login-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-offset-2 col-xs-12 thank-you">

                {% if success == '1' %}
                        <h3 class="thank-you__header">Thank you</h3>
                        <p class="thank-you__text">Your email address has been verified.</p>
                        <a href="{{_AppHelper.getLoginUrl()}}" class="thank-you__link">Get Started</a>
                    {% else %}
                        <h3 class="thank-you__header">Oops!</h3>
                        <p class="thank-you__text">Something went wrong.<br>Please check your email address is not already registered.</p>
                    {% endif %}                    
            </div>
        </div>
    </div>
</div>
